      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sessia6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <TextBox x:Name="TBLogin" HorizontalAlignment="Center" Margin="0,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="33"/>
        <PasswordBox x:Name="PBPassword" HorizontalAlignment="Center" Margin="0,131,0,0" VerticalAlignment="Top" Width="172" Height="33"/>
        <Button x:Name="ButtonVhod" Content="Войти" HorizontalAlignment="Center" Margin="0,185,0,0" VerticalAlignment="Top" Width="172" Height="27" Click="ButtonVhod_Click"/>
        <Button x:Name="ButtonVhodGost" Content="Войти как гость" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top" Width="172" Height="66" Click="ButtonVhodGost_Click"/>

    </Grid>
</Page>
